<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    style="@style/title_bar_style" >

    <FrameLayout
        android:id="@+id/top_head_container_left"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip" >

        <ImageView
            android:id="@+id/top_head_left"
            android:layout_width="@dimen/head_size"
            android:layout_height="@dimen/head_size"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_titlebar_left"
            android:padding="2.0dip"
            android:scaleType="fitXY" />
    </FrameLayout>

    <TextView
        android:id="@+id/title"
        style="@style/title_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:paddingBottom="1.5dip"
        android:paddingLeft="6.0dip"
        android:paddingRight="6.0dip"
        android:text="兆维"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/top_head_container_right"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip" >

        <ImageView
            android:id="@+id/top_head_right"
            android:layout_width="@dimen/head_size"
            android:layout_height="@dimen/head_size"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_titlebar_right"
            android:padding="2.0dip"
            android:scaleType="fitXY" />
    </FrameLayout>
    
</RelativeLayout>